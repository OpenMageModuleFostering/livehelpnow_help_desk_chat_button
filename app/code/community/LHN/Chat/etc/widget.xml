<?xml version="1.0"?>
<widgets>
	<chat_button type="chat/button">
		<name>LiveHelpNow Help Desk -- Chat Button</name>
		<description type="desc">Adds a LiveHelpNow Chat button to your website</description>
		<parameters>
			<account_number translate="label">
				<required>1</required>
				<visible>1</visible>
				<label>LiveHelpNow Account Number</label>
				<description><![CDATA[* Must be numeric<br /><a href="http://www.livehelpnow.net/lnd/trial.aspx" target="_blank">Sign Up</a> if you do not have a LiveHelpNow account]]></description>
				<type>text</type>
			</account_number>
			<button_number translate="label">
				<required>1</required>
				<visible>1</visible>
				<label>LiveHelpNow Button Number</label>
				<description><![CDATA[* Must be numeric<br /><a href="http://www.livehelpnow.net/products/live_chat_system/buttons/" target="_blank">View Buttons</a>]]></description>
				<type>text</type>
			</button_number>
		</parameters>
	</chat_button>
</widgets>